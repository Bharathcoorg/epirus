{
  "name": "squid-ink",
  "private": true,
  "scripts": {
    "build": "rm -rf lib && tsc",
    "init": "node db/init.js",
    "db:migrate": "npx sqd db migrate",
    "schema:reset": "bash scripts/reset-db.sh",
    "processor:migrate": "echo skip",
    "processor:start": "node -r dotenv/config lib/processor.js dotenv_config_path=$ENV",
    "processor:docker-run": "bash scripts/docker-run.sh",
    "query-node:start": "squid-graphql-server",
    "lint": "npm run lint:prod -- --fix",
    "lint:prod": "eslint . --ext .ts --ignore-path .gitignore --max-warnings 0",
    "test": "jest",
    "test:coverage": "npm test -- --coverage"
  },
  "dependencies": {
    "@subsquid/archive-registry": "^1.0.2",
    "@subsquid/cli": "^0.5.1",
    "@subsquid/graphql-server": "^1.1.0",
    "@subsquid/logger": "^0.0.2",
    "@subsquid/scale-codec": "^1.0.2",
    "@subsquid/ss58": "^0.1.1",
    "@subsquid/substrate-processor": "^1.2.0",
    "@subsquid/typeorm-store": "^0.1.0",
    "@subsquid/util-internal-hex": "^0.0.1",
    "dotenv": "^16.0.0",
    "module-alias": "^2.2.2",
    "pg": "^8.7.3",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "^1.0.3",
    "@subsquid/substrate-typegen": "^1.0.2",
    "@types/jest": "^28.1.4",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.11.27",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-type-graphql": "^0.3.2",
    "jest": "^28.1.2",
    "ts-jest": "^28.0.5",
    "typescript": "~4.6.2"
  }
}
